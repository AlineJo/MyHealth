<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.GoalsFragment">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/et_date_end"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintBottom_toBottomOf="@+id/tv_date_start2"
        app:layout_constraintEnd_toEndOf="@+id/et_calories"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/et_calories"
        app:layout_constraintTop_toTopOf="@+id/tv_date_start2" />

    <TextView
        android:id="@+id/tv_date_start2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="تاريخ الآنتهاء"
        app:layout_constraintEnd_toEndOf="@+id/tv_label_calories"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="@+id/tv_label_calories"
        app:layout_constraintTop_toBottomOf="@+id/et_date_start" />

    <TextView
        android:id="@+id/tv_label_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:text="السعرات الحرارية"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_calories"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/tv_label_calories"
        app:layout_constraintEnd_toStartOf="@+id/tv_label_calories"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_label_calories" />

    <TextView
        android:id="@+id/tv_goals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="قائمة الآهداف"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/tv_label_calories"
        app:layout_constraintStart_toStartOf="@+id/tv_label_calories"
        app:layout_constraintTop_toBottomOf="@+id/tv_label_calories" />

    <Spinner
        android:id="@+id/spinner_goals"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/et_calories"
        app:layout_constraintTop_toBottomOf="@+id/tv_goals" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="وقت التذكير"
        app:layout_constraintEnd_toEndOf="@+id/tv_label_calories"
        app:layout_constraintStart_toStartOf="@+id/tv_label_calories"
        app:layout_constraintTop_toBottomOf="@+id/spinner_goals" />

    <EditText
        android:id="@+id/et_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="time"
        app:layout_constraintBottom_toBottomOf="@+id/textView11"
        app:layout_constraintEnd_toStartOf="@+id/textView11"
        app:layout_constraintStart_toStartOf="@+id/et_calories"
        app:layout_constraintTop_toTopOf="@+id/textView11" />

    <TextView
        android:id="@+id/tv_date_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="تاريخ البدء"
        app:layout_constraintEnd_toEndOf="@+id/tv_label_calories"
        app:layout_constraintStart_toStartOf="@+id/tv_label_calories"
        app:layout_constraintTop_toBottomOf="@+id/et_time" />

    <EditText
        android:id="@+id/et_date_start"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintBottom_toBottomOf="@+id/tv_date_start"
        app:layout_constraintEnd_toEndOf="@+id/et_calories"
        app:layout_constraintStart_toStartOf="@+id/et_calories"
        app:layout_constraintTop_toTopOf="@+id/tv_date_start" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:backgroundTint="@color/colorAccent"
        android:text="Set"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_date_end" />

</androidx.constraintlayout.widget.ConstraintLayout>